<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <!--configure servlet program-->
    <servlet>
        <!--name is for servlet program(usually the classname)-->
        <servlet-name>HelloServlet</servlet-name>
        <servlet-class>com.atguigu.servlet.HelloServlet</servlet-class>
    </servlet>
    <!--configure a address-->
    <servlet-mapping>
        <!--this name is for server to find the corresponding servlet-->
        <servlet-name>HelloServlet</servlet-name>
        <!--address
        / is http://ip:port/project_path(06_servlet_war_exploded)
        here the /hello means
        -->
        <url-pattern>/hello</url-pattern>
    </servlet-mapping>
</web-app>